{
  "name": "yacdn",
  "version": "0.1.0",
  "description": "Yet Another CDN.",
  "main": "server.js",
  "scripts": {
    "test": "npm run testsuite && npm run linter",
    "testsuite": "DEBUG=yacdn:* jest --forceExit",
    "coverage": "jest --forceExit --coverage",
    "linter": "xo",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ovsoinc/yacdn.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/ovsoinc/yacdn/issues"
  },
  "homepage": "https://github.com/ovsoinc/yacdn#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "ioredis": "^4.9.2",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "mime-types": "^2.1.24",
    "nodemon": "^1.19.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.3",
    "del": "^4.1.1",
    "istanbul": "^1.1.0-alpha.1",
    "jest": "^24.8.0",
    "mocha": "^6.1.4",
    "mocker": "^0.1.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "globals": [
      "window",
      "describe",
      "it",
      "before"
    ],
    "rules": {
      "no-await-in-loop": "off",
      "curly": "off",
      "capitalized-comments": "off",
      "no-new": "off",
      "prefer-rest-params": "off",
	  "unicorn/filename-case": ["off", {"case": "camelCase"}]
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
